{{> header}}

<div class="container">
    {{> sidebar}}
  
    <div class="in-container__right">
      {{> heading }}
      <div class="main">
  
        <div class="head-of-main">
          <div class="wrapper-jumbotron d-flex-vertical" style="--bg-index-jumbotron: url('/uploads/{{movies.0.image}}')">
            <div class="section_one d-flex">
              <div class="episode">
                <p>10 episode</p>
              </div>
              <div class="watcher">
                <p>+ 8 Friends are watching</p>
              </div>
            </div>
            <div class="section_two">
              <h1 class="title">{{movies.0.movie_name}}</h1>
              <button class="btn btn-theme"><a class="btn-ripple" href="/movies/detail/{{movies.0.id}}">Watch</a></button>
              <button class="btn btn-second btn-ripple">+</button>
            </div>
          </div>
          <br>
          {{#if movies}}
            <div class="parties have-loader">
              <div class="loading">
                <span style="--i:1.5;"></span>
                <span style="--i:3.5;"></span>
                <span style="--i:6.5;"></span>
              </div>
              <h2>Movies</h2>
              <ul class="list-parties">
                {{#each movies}}
                  <li class="d-flex-vertical">
                    <a href="/movies/detail/{{this.id}}">
                      <div class="header d-flex-horizontal">
                        <img src="/uploads/{{this.image}}" alt="">
                      </div>
                      <div class="about">
                        <p class="text-center">{{this.movie_name}}</p>
                      </div>
                    </a>
                  </li>
                {{/each}}
              </ul>
            </div>
          {{/if}}
        </div>
  
      </div>
    </div>
    <button class="btn-nav" onclick="openNav()">Nav</button>
</div>

<script src="/static/js/scMovie.js"></script>
{{> footer}}